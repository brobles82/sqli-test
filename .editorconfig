root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 300
trim_trailing_whitespace = true

[*.py]
indent_style = space
indent_size = 4

[*.md]
max_line_length = 0
insert_final_newline = false
trim_trailing_whitespace = false

[*.{yml,yaml,json}]
indent_style = space
indent_size = 2
insert_final_newline = false
